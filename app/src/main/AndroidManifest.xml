<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="swim.swimmom" >

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="SwimMOM"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="Profiles"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MeetActivity"
            android:label="Meets"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CutTimeActivity"
            android:label="Cut Times"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CutTimeAddActivity"
            android:label="Add Cut Time"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".StatisticActivity"
            android:label="Statistics"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ProfileAddActivity"
            android:label="Add Swimmer"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ProfileEditActivity"
            android:label="Edit Swimmer"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MeetCreateActivity"
            android:label="Create Meet"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MeetCreateSwimmersActivity"
            android:label="Select Swimmers"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MeetCreateSwimmersEventsActivity"
            android:label="Select Events"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MeetSave"
            android:label="Save Meet"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CutTimeEditActivity"
            android:label="@string/title_activity_cut_time_edit" >
        </activity>
    </application>

</manifest>
