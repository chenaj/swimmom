<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layoutholder">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/logoSect">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/logo"
                android:nestedScrollingEnabled="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@android:color/black"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="0dp"
            android:singleLine="false"
            android:id="@+id/spacer" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/BtnSect"
            android:layout_gravity="center_horizontal"
            android:gravity="bottom"
            android:paddingBottom="30dp"
            android:background="#ff0088aa">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="92dp"
                android:id="@+id/ctm_prof_btn"
                android:background="@drawable/ctm_profiles"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:onClick="goToProfiles" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="92dp"
                android:id="@+id/ctm_meets_btn"
                android:onClick="goToMeets"
                android:background="@drawable/ctm_meets"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="92dp"
                android:id="@+id/ctm_ctimes_btn"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/ctm_ctimes"
                android:onClick="goToCutTimes" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="92dp"
                android:id="@+id/ctm_stats_btn"
                android:background="@drawable/ctm_stats"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:onClick="goToStatistics" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
