<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:nestedScrollingEnabled="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="307dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profiles"
        android:id="@+id/profilesBtn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:textSize="25dp"
        android:background="#ff0289aa"
        android:textColor="#ffffffff"
        android:layout_marginBottom="20dp"
        android:onClick="goToProfiles" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meets"
        android:id="@+id/meetsBtn"
        android:layout_below="@+id/profilesBtn"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:textSize="25dp"
        android:background="#ff0289aa"
        android:textColor="#ffffffff"
        android:layout_marginBottom="20dp"
        android:onClick="goToMeets" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cut Times"
        android:id="@+id/cutTimesBtn"
        android:layout_below="@+id/meetsBtn"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:textSize="25dp"
        android:background="#ff0289aa"
        android:textColor="#ffffffff"
        android:layout_marginBottom="20dp"
        android:onClick="goToCutTimes" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:id="@+id/statisticsBtn"
        android:layout_below="@+id/cutTimesBtn"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:textSize="25dp"
        android:background="#ff0289aa"
        android:textColor="#ffffffff"
        android:onClick="goToStatistics" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignRight="@+id/profilesBtn"
        android:layout_alignEnd="@+id/profilesBtn" />
</RelativeLayout>
