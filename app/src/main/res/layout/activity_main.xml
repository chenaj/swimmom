<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layoutholder">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/logoSect">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/logo"
                android:nestedScrollingEnabled="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="0dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@android:color/black"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="0dp"
            android:singleLine="false" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/BtnSect"
            android:layout_gravity="center_horizontal"
            android:gravity="bottom"
            android:background="#ff0289aa">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:id="@+id/profilesBtn"
                android:src="@drawable/prof_btn"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:paddingBottom="6dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:id="@+id/meetsBtn"
                android:src="@drawable/meets_btn"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:paddingBottom="6dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:id="@+id/cuttimesBtn"
                android:src="@drawable/ctimes_btn"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:paddingBottom="6dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:id="@+id/statisticsBtn"
                android:src="@drawable/stats_btn"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:paddingBottom="6dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
